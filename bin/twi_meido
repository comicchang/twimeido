#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)

require 'twi_meido'

EM.run do
  EM.add_periodic_timer(2) do
    if EM.threadqueue && EM.threadqueue.size > 0
      puts "#{Time.now.to_s :db} Defered jobs queued: #{EM.threadqueue.size}"
    end
  end

  TwiMeido.run
end
